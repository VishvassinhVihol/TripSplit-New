<%- layout('./layouts/boilerplate.ejs') %>
<style>
    .background{
        margin-top: 50px;
        position: fixed;
        top: 0;
        /* transform: scale(1.5); */
        height: 100vh;
        z-index: -1;
    }
    .newTrip{
        padding: 10px;
        color: white;
        margin-top: 120px;
        
    }
    .newTripBody{
        border: 2px solid #00FFC6;
        padding: 60px 40px;
    }
</style>
<body>
    <iframe class="background" src='https://my.spline.design/particles-d9382bce4660304725e818210677b275/' frameborder='0' width='100%' height='100%'></iframe>
     
    <div class=" newTrip nt">
        <div class="newTripBody">
            <h2>Signup on TripSplit</h2>
            <form action="/signup" method="POST" novalidate class="needs-validation">
                <div class="my-3">
                    <input id="name" name="username" class="form-control" type="text" required placeholder="Enter username">
                    <div class="invalid-feedback">
                        Username is required!
                    </div>
                </div>
                <div class="my-3">
                    <input id="email" name="email" class="form-control" type="email" required placeholder="Enter email">
                    <div class="invalid-feedback">
                        Email is required!
                    </div>
                </div>
                
                <div>
                    <input id="password" name="password" class="form-control" type="password" placeholder="Password" required>
                    <div class="invalid-feedback">
                        Username is required!
                    </div>
                </div>
                <button class="btn btn-success mt-4" type="submit">Signup</button><br><br>
               
            </form>
        </div>
    </div>

    
</body>
