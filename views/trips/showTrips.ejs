<%- layout('/layouts/boilerplate.ejs') %>
<body>
    <style>
        .background{
            position: fixed;
            top: 0;
            height: 100vh;
            z-index: -1;
        }
    </style>
    <%if(trips.length > 0) {%>
        <iframe class="background" src='https://my.spline.design/particles-5c0d47a254b505c10e450ac8db27c1e6/' frameborder='0' width='100%' height='100%'></iframe>
            <h2 class="m-3" style="text-align: center; color: white;">All Trips of <%=currUser.username%></h2>

            <div class="row row-cols-lg-3 row-cols-md-2 g-4 " >
                
                    <%for(let trip of trips){%>
                        <a href="/trip/<%=trip._id%>/dashboard" class="text-decoration-none">
                            <div class="showTrips col  card">
                                <img src="https://images.unsplash.com/photo-1607068891828-f16297950a66?q=80&w=1804&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" class="card-image">
                                <div class="card-body showTripBody">
                                    <h5 class="card-title"><%=trip.title%></h5>
                                </div>
                            </div>
                        </a>
                        
                       
                    <%}%>
                
            </div>
    <%}%>

</body>
